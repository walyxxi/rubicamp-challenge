<% include partials/header %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading form-control-sm">
            <h4 class="panel-title">Filter</h4>
        </div>
        <form class="form-horizontal" action="/" method="get">
            <div class="panel-body form-control-sm">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkid" <%= query.checkid ? ' checked' : '' %>>
                        ID</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control form-control-sm" id="id" placeholder="ID" name="id">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkstring" <%= query.checkstring ? ' checked' : '' %>> String</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control form-control-sm" id="string" placeholder="String" name="string">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkinteger" <%= query.checkinteger ? ' checked' : '' %>> Integer</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control form-control-sm" id="integer" placeholder="Integer" name="integer">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkfloat" <%= query.checkfloat ? ' checked' : '' %>> Float</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control form-control-sm" id="float" placeholder="Float" name="float">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkdate" <%= query.checkdate ? ' checked' : '' %>> Date</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control form-control-sm" id="sdate" placeholder="Start Data" name="sdate">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">to</label>
                        <input type="date" class="form-control form-control-sm" id="edate" placeholder="End Date" name="edate">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><input type="checkbox" id="" name="checkbolean" <%= query.checkboolean ? ' checked' : '' %>> Boolean</label>
                    <div class="col-sm-5">
                        <select class="form-control form-control-sm" id="boolean" name="boolean">
                            <option disabled selected>Choose the boolean...</option>
                            <option value="True" <%= query.boolean == "True" ? ' selected' : ''; %>>True</option>
                            <option value="False" <%= query.boolean == "False" ? ' selected' : ''; %>>False</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" role="button">Search</button>
                        <button type="reset" class="btn btn-warning" role="button">Reset</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">String</th>
                                <th scope="col">Integer</th>
                                <th scope="col">Float</th>
                                <th scope="col">Date</th>
                                <th scope="col">Boolean</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item) => { %>
                            <tr>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.string %>
                                </td>
                                <td>
                                    <%= item.integer %>
                                </td>
                                <td>
                                    <%= item.float %>
                                </td>
                                <td>
                                    <%= item.date %>
                                </td>
                                <td>
                                    <%= item.boolean %>
                                </td>
                                <td>
                                    <a href="edit/<%= item.id %>" class="btn btn-success">Edit</a>
                                    <a href="delete/<%= item.id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item <%= page == 1 ? 'disabled': ''; %>"><a class="page-link" href="/?page=<%= parseInt(page) - 1%>">Previous</a></li>
                        <% for (let i = 1; i <= pages; i++) { %>
                        <li class="page-item <%= page == i ? 'active': ''; %>"><a class="page-link" href="/?page=<%= i %>">
                                <%= i %></a></li>
                        <% }; %>
                        <li class="page-item <%= page == pages ? 'disabled': ''; %>"><a class="page-link" href="/?page=<%= parseInt(page) - 1%>">Next</a></li>
                    </ul>
                </nav>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <a href="/add" type="submit" class="btn btn-primary">Add</a>
                    </div>
                </div>
        </form>
    </div>
</div>
<% include partials/footer %>